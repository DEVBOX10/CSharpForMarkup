      <Title>Layout Component</Title>
      <Author>VincentH.NET</Author>
      <Description>C# Markup Layout component for Xamarin Forms</Description>
      <HelpUrl>https://vincenth.net/blog/archive/2020/06/04/csharp-markup-snippets.aspx</HelpUrl>
      <Shortcut>cmLayout</Shortcut>
    </Header>
    <Snippet>
      <Declarations>
        <Literal Editable="true">
          <ID>Name</ID>
          <ToolTip>Component name</ToolTip>
          <Default>Name</Default>
        </Literal>
		    <Object Editable="true">
          <ID>LayoutType</ID>
          <Type>Xamarin.Forms.IViewContainer&lt;View&gt;</Type>
          <Default>StackLayout</Default>
          <ToolTip>Layout type</ToolTip>
        </Object>
		    <Object Editable="true">
          <ID>ChildViewType</ID>
          <Type>Xamarin.Forms.View</Type>
		      <Default>Label</Default>
          <ToolTip>Child view type</ToolTip>
        </Object>
      </Declarations>
      <Code Language="csharp" Kind="method decl" Delimiter="$">
  <![CDATA[$LayoutType$ $Name$ => new $LayoutType$ {
            Children = {
                new $ChildViewType$ { }
            }
        };
]]></Code>
      <Imports>
        <Import>
		  <Namespace>Xamarin.Forms</Namespace>
		</Import>
        <Import>
		  <Namespace>Xamarin.Forms.Markup</Namespace>
		</Import>
        <Import>
		  <Namespace>Xamarin.Forms.Markup.LeftToRight</Namespace>
		</Import>
